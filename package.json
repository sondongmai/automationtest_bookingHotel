{
  "name": "cinema automation",
  "type": "module",
  "version": "1.0.0",
  "description": "Cinema Playwright Test Automation",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf allure-results && rimraf allure-report && rimraf test-results && rimraf playwright-report && rimraf junit-results && rimraf lighthouse && rimraf downloads",
    "play-report": "npx playwright show-report",
    "ortoni-report": "npx ortoni-report show-report",
    "allure-report": "allure generate ./allure-results --clean",
    "open-report": "npm run allure-report && allure open ./allure-report",
    "firefox": "npm run clean && npx playwright test --project=firefox",
    "chromium": "npx playwright test --project=\"Google Chrome\"",
    "webkit": "npx playwright test --project=webkit",
    "test": "npm run clean && npx playwright test --project=\"Google Chrome\"",
    "test-head": "npm run clean && npx playwright test --headed --project=\"Google Chrome\"",
    "rerun failed-test": "npx playwright test --last-failed",
    "reinstall": "npx playwright install",
    "install-deps": "npx playwright install-deps",
    "install-ortoni-report": "npm install ortoni-report --save-dev",
    "report:generate": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report",
    "test:ui": "npm run clean && npx playwright test tests/specs/UI --project=\"chromium\""
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "playwright",
    "playwright-test",
    "allure report",
    "web test automation",
    "e2e test automation"
  ],
  "author": "Son Nguyen",
  "license": "CC0",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/numeral": "^2.0.5",
    "allure-commandline": "^2.32.2",
    "allure-playwright": "^3.3.0",
    "axios": "^1.6.0",
    "lighthouse": "^12.4.0",
    "nodemailer": "^6.9.0",
    "ortoni-report": "^3.0.5",
    "playwright-lighthouse": "^4.0.0",
    "playwright-slack-report": "^1.1.98",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "winston": "^3.17.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "dotenv": "^16.4.7",
    "numeral": "^2.0.6",
    "strip-ansi": "^7.1.0"
  }
}
